{
	"type": "WeatherUnderground",
	"version": "1.0.2",
	"releaseType": "beta",
	"author": "Jean-Michel BERHAULT",
   "url": "https://github.com/Yadoms/yadoms/wiki/WeatherUnderground",
	"credits": "",
	"supportedPlatforms": "all",
	"supportManuallyDeviceCreation": "true",
   "supportDeviceRemovedNotification": "true",
	"configurationSchema": {
		"APIKey": {
			"type": "string"
		},
      "location": {
         "type": "section",
		   "enableWithCheckBox": "true",
		   "enableWithCheckBoxDefaultValue": "false",         
         "content": {        
            "longitude": {
               "type": "decimal",
               "defaultValue" : "0"
            },
            "latitude": {
               "type": "decimal",
               "defaultValue" : "0"               
            }
         }
      }
	},
   "manuallyDeviceCreationConfigurationSchema": {
         "LiveStations" : {				 
             "type" : "enum",
             "__Binding__" : {
               "type" : "plugin", 
               "query" : "LiveStations"
            }
         },
         "deviceToCreate":
         {
            "type": "radioSection",
            "content":
            {
              "LiveConditions" :
              {
                    "type": "section",                 
                    "content":
                    {
                       "IndividualKeywords" :
                       {				 
                          "type" : "bool",
                          "defaultValue" : "false"
                       }
                    }
              },
              "Astronomy" :
              {
                    "type": "section"
              },
              "Forecast10Days" :
              {
                    "type": "section",
                    "content":
                    {
                       "individualRainForecast" :
                       {				 
                          "type" : "bool",
                          "defaultValue" : "false"
                       },
                       "individualTempForecast" :
                       {				 
                          "type" : "bool",
                          "defaultValue" : "false"
                       }                    
                    }
              }
            }
		 }
   }   
}