{
	"type": "ZWave",
	"version": "0.1",
	"releaseType": "beta",
	"author": "yadoms-team",
   "url": "https://github.com/Yadoms/yadoms/wiki/Zwave",
	"credits": "[openzwave](http://www.openzwave.com/)",
	"supportedPlatforms": "all",
	"configurationSchema": {
		"Serial Port": {
			"type": "enum",
			"values": {
				"__Binding__": {
					"type": "system",
					"query": "serialPorts"
				}
			}
		},
		"IncludeSystemKeywords":
		{
			"type": "bool",
			"defaultValue": "false"
		}
	},
	"extraCommands" : {
		"inclusionMode" : {
			"iconClass" : "fa fa-plus"
		},
		"exclusionMode" : {
			"iconClass" : "fa fa-minus"
		},
		"softReset" : {
			"iconClass" : "fa fa-refresh"
		},
		"testNetwork" : {
			"iconClass" : "fa fa-check",
			"commandData" : {
				"frameCount": {
					"type": "numeric"
				}			
			}
			
		},
		"healNetowrk" : {
			"iconClass" : "fa fa-flask"
		},
		"cancelCommand" : {
			"iconClass" : "fa fa-undo"
		},
		"hardReset" : {
			"iconClass" : "fa fa-fire"
		}
	}
}