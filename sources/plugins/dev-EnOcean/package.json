{
  "type": "dev-enOcean",
  "version": "0.0.1",
  "releaseType": "beta",
  "author": "SÃ©bastien Gallou",
  "url": "https://github.com/Yadoms/yadoms/",
  "credits": "",
  "supportedPlatforms": "all",
  "configurationSchema": {
    "SerialPort": {
      "type": "enum",
      "values": {
        "__Binding__": {
          "type": "system",
          "query": "serialPorts"
        }
      }
    }
  },
  "supportManuallyDeviceCreation": "true",
  "manuallyDeviceCreationConfigurationSchema": {
    "id": {
      "type": "string",
      "maximumLength": "8",
      "required": "true",
      "regex": "^[a-fA-F0-9]{8}$",
      "regexErrorMessage": "Must be a 8 characters long hexadecimal string (ie: 0x1234ABCD)"
    },
    "profile": {
      "type": "enum",
      "values": {
        "__Binding__": {
          "type": "plugin",
          "query": "profiles"
        }
      }
    },
    "manufacturer": {
      "type": "string"
    },
    "model": {
      "type": "string"
    }
  },
  "deviceConfiguration": {
    "staticConfigurationSchema": [
      {
        "models": ["*"],
        "schema": {
          "manufacturer": {
            "type": "string"
          },
          "model": {
            "type": "string"
          },
          "profile": {
            "type": "radioSection",
            "content": {
              "F6-02-01": {
                "type": "section",
                "content": ""
              },
              "D2-01-12": {
                "type": "section",
                "content": {
                  "localControl": {
                    "type": "enum",
                    "values": {
                      "enable": "",
                      "disable": ""
                    },
                    "defaultValue": "enable"
                  },
                  "taughtIn": {
                    "type": "enum",
                    "values": {
                      "allDevices": "",
                      "yadomsOnly": ""
                    },
                    "defaultValue": "allDevices"
                  },
                  "userInterfaceMode": {
                    "type": "enum",
                    "values": {
                      "dayMode": "",
                      "nightMode": ""
                    },
                    "defaultValue": "dayMode"
                  },
                  "defaultState": {
                    "type": "enum",
                    "values": {
                      "off": "",
                      "on": "",
                      "previousState": "",
                      "notUsed": ""
                    },
                    "defaultValue": "off"
                  },
                  "connectedSwitchsType": {
                    "type": "enum",
                    "values": {
                      "switch": "",
                      "pushButton": "",
                      "autodetection": ""
                    },
                    "defaultValue": "autodetection"
                  },
                  "autoOffTimer": {
                    "type": "decimal",
                    "minimumValue": "0",
                    "maximumValue": "3600",
                    "precision": "1",
                    "defaultValue": "0"
                  },
                  "delayRadioOffTimer": {
                    "type": "decimal",
                    "minimumValue": "0",
                    "maximumValue": "3600",
                    "precision": "1",
                    "defaultValue": "0"
                  }
                }
              }
            }
          }
        }
      }
    ]
  }
}