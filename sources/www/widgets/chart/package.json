{
	"type": "chart",
	"version": "1.0.1-rc.2",
	"author": "Jean-Michel BERHAULT, Nicolas HILAIRE",
	"url": "https://github.com/Yadoms/yadoms/wiki/chart",
	"credits": "[Highstocks](http://www.highcharts.com/)",
  "dimensions": {
    "min": {
      "x": 3,
      "y": 3
    },
    "max": {
      "x": 10,
      "y": 4
    },
    "default": {
      "x": 3,
      "y": 3
    }
  },
  "hasTitle" :  true,
	"configurationSchema": {
		"interval": {
			"type": "enum",
			"values": {
				"HOUR": "",
				"DAY": "",
				"WEEK": "",
				"MONTH": "",
				"HALF_YEAR": "",
				"YEAR": ""
			},         
			"defaultValue": "DAY"
		},
      "legends" : {
			"type": "section",
			"defaultValue": "true",
			"enableWithCheckBox": "true",
			"enableWithCheckBoxDefaultValue": "true",
         "content": {        
            "legendLabels" : {
               "type": "enum",
               "values": {
                  "DeviceAndKeyword": "",
                  "Device": "",
                  "Keyword": ""
               },         
               "defaultValue": "DeviceAndKeyword"
            }
         }
      },
		"oneAxis": {
			"type": "section",
			"defaultValue": "false",
			"enableWithCheckBox": "true",
			"enableWithCheckBoxDefaultValue": "false",			
			"content": {
					"customYAxisMinMax": {
						"type": "section",
						"enableWithCheckBox": "true",
						"enableWithCheckBoxDefaultValue": "false",
						"content": {
							"minimumValue": {
								"type": "decimal",
								"defaultValue": "0.0",
								"precision": "1"
							},
							"maximumValue": {
								"type": "decimal",
								"defaultValue": "100.0",
								"precision": "1"
							}
						}
					}
			}
		},
		"devices": {
			"type": "list",
			"nbItemsMin": "1",
			"nbItemsMax": "3",
			"allowDuplication": "true",
			"item": {
				"type": "section",
				"content": {
					"source": {
						"type": "keyword",
						"expectedKeywordType": ["numeric", "bool"],
						"expectedKeywordAccess": "get"
					},
					"color": {
						"type": "color",
						"defaultValue": "#0000FF"
					},
               "advancedConfiguration": {
                  "type": "section",
                  "enableWithCheckBox": "true",
                  "enableWithCheckBoxDefaultValue": "false",
                  "content": {
                     "differentialDisplay": {
                        "type": "enum",
                        "values": {
                           "absolute": "",
                           "relative": ""
                        },                  
                        "sort": "true",
                        "defaultValue": "absolute"
                     },
                     "periodtype": {
                        "type": "enum",
                        "values": {
                           "min":"",
                           "avg": "",
                           "max": ""
                        },                  
                        "sort": "false",
                        "defaultValue": "avg"
                     }
                  }
               },
					"PlotType": {
                  "type": "enum",
						"values": {
							"line": "",
							"bar": "",
							"arearange": ""
						},                  
                  "sort": "true",
			         "defaultValue": "line"
					}
				}
			}
		}
	}
}